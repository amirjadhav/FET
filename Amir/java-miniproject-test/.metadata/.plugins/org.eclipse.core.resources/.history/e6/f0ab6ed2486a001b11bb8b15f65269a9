var vid = document.getElementById("myVideo");
var isVideoCompleted = false;
$(document).ready(function() {
	if (isVideoCompleted === false) {
		$('.nextvideo').attr('disabled','disabled');
});

function currentVideoTime(event) {
	// The currentTime property returns the current position of the audio/video playback
	// document.getElementById("demo").innerHTML = event.currentTime;
	console.log(event.currentTime);
	if (event.currentTime / vid.duration > 0.9
		&& isVideoCompleted === false) {
		console.log("Course completed");
		isVideoCompleted = true;
		if (isVideoCompleted === true) {
			$('.nextvideo').on('click', function(e) {
				alert("Button")	;
			})
		}
	}
}